 # @subpackage WebLexProDashaboard
 #}

{% import "macros/form.html.twig" as forms %}


<form action="{{ action | e( 'esc_url' ) }}" class="post-password-form" method="post">
	<div class="mt-3 mb-14 first:mt-0 last:mb-0">
		<p>{{ __( 'This content is password protected. To view it please enter your password below:' ) }}</p>
	</div>

	<div class="my-3 first:mt-0 last:mb-0">
		{{-
			forms.text({
				type: 'password',
				id: "pwbox-#{ post.id }",
				name: 'post_password',
				label: __( 'Password', 'weblexpro-dashboard' ),
			})
		-}}
	</div>

	<div class="mt-10 mb-3 first:mt-0 last:mb-0">
		<input class="w-full button" type="submit" name="Submit" value="{{ __( 'Enter', 'weblexpro-dashboard' ) | e }}" />
	</div>
</form>
