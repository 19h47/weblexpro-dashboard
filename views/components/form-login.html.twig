{#
 # Form Login
 #
 # @package WordPress
 # @subpackage WebLexProDashaboard
 #}

{% import "macros/form.html.twig" as forms %}

<form name="loginform" action="{{ action | e( 'esc_url' ) }}" method="post">

	<div class="mt-3 mb-14 first:mt-0 last:mb-0">
		<a class="block h-8" href="{{ site.link }}">
			<img class="block h-full mx-auto" src="{{ asset( 'img/svg/logo.svg' ) }}" alt="">
		</a>
	</div>

	<div class="my-3 first:mt-0 last:mb-0">
		{{- forms.text({ id: 'user_login', name: 'log', label: __( 'Username or Email Address', 'weblexpro-dashboard' ) }) -}}
	</div>
	<div class="my-3 first:mt-0 last:mb-0">
		{{-
			forms.text({
				type: 'password',
				id: 'user_pass',
				name: 'pwd',
				label: __( 'Password', 'weblexpro-dashboard' ),
				custom_attributes: {
					autocapitalize: "off"
				}
			})
		-}}
	</div>
	<div class="mt-3 mb-10 first:mt-0 last:mb-0">
		<label class="flex text-blue-dark">
			<input
				class="w-4 h-4 mt-1 mr-1 border rounded-sm appearance-none min-w-4 bg-blue-light-grayish border-blue-light-grayish checked:bg-blue-vivid checked:border-blue-vivid checked:shadow-lg"
				name="rememberme"
				type="checkbox"
				id="rememberme"
				value="forever"
			>
			<span>
				{{- __( 'Remember Me', 'weblexpro-dashboard' ) -}}
			</span>
		</label>
	</div>
	<div class="mt-10 mb-3 first:mt-0 last:mb-0">
		<input type="submit" name="wp-submit" id="wp-submit" class="w-full button" value="{{ __( 'Log In', 'weblexpro-dashboard' ) }}">
		<input type="hidden" name="redirect_to" value="{{ redirect | e }}">
	</div>

	<div class="my-3 text-right first:mt-0 last:mb-0">
		<a class="text-xs text-blue-bright hover:underline" href="{{ lostpassword_url | e( 'esc_url' ) }}">
			{{- __( 'Lost your password?', 'weblexpro-dashboard' ) -}}
		</a>
	</div>
</form>
