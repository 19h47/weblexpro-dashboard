{#
 # Form Login
 #
 # @package WordPress
 # @subpackage WebLexProDashaboard
 #}

{% import "macros/form.html.twig" as forms %}

<form name="loginform" action="{{ action | e( 'esc_url' ) }}" method="post">

	<div class="mb-14 first:mt-0 last:mb-0">
		<a class="block" href="{{ site.link }}">
			<img class="block mx-auto" src="{{ asset( 'img/svg/logo.svg' ) }}" alt="" width="618" height="114">
		</a>
	</div>

	<div class="my-3 first:mt-0 last:mb-0">
		{{-
			forms.text({
				id: 'user_login', name: 'log', label: __( 'Username or Email Address', 'weblexpro-dashboard' )
			})
		-}}
	</div>
	<div class="my-3 first:mt-0 last:mb-0">
		{{-
			forms.text({
				type: 'password',
				id: 'user_pass',
				name: 'pwd',
				label: __( 'Password', 'weblexpro-dashboard' ),
				custom_attributes: {
					autocapitalize: "off"
				}
			})
		-}}
	</div>
	<div class="mt-6 mb-10 first:mt-0 last:mb-0 flex justify-between items-center text-blue-dark">
		<label class="flex gap-x-3 items-center">
			<input
				class="w-7 h-7 border rounded-sm appearance-none min-w-4 bg-gray border-gray checked:bg-blue-vivid checked:border-blue-vivid checked:shadow-lg"
				name="rememberme"
				type="checkbox"
				id="rememberme"
				value="forever"
			>
			<span>
				{{- __( 'Remember Me', 'weblexpro-dashboard' ) -}}
			</span>
		</label>

		<div class="text-right first:mt-0 last:mb-0">
			<a class="hover:underline" href="{{ lostpassword_url | e( 'esc_url' ) }}">
				{{- __( 'Lost your password?', 'weblexpro-dashboard' ) -}}
			</a>
		</div>
	</div>
	<div class="mt-10 first:mt-0 last:mb-0 text-center">
		<input type="submit" name="wp-submit" id="wp-submit" class="w-auto button bg-blue-dark rounded-2xl text-white p-5" value="{{ __( 'Log In', 'weblexpro-dashboard' ) }}">
		<input type="hidden" name="redirect_to" value="{{ redirect | e }}">
	</div>
</form>
