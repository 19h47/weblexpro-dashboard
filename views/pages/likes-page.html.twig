{#
 # Page: Likes
 #
 # @package WordPress
 # @subpackage WebLexProDashboard
 #}

{% extends 'index.html.twig' %}

{% block content %}
	{{ parent() }}

	{%- if user.meta( 'likes' ) -%}
		<div class="container lg:text-3xl">
			<div class="row">
				<div>
					<div class="border-l border-gray-very-dark space-y-4 lg:space-y-0">
						{%- for post in get_posts( { post_status: [ 'inherit', 'publish' ], post_type: [ 'document', 'attachment' ], post__in: user.meta( 'likes' ) } ) -%}

							{%- if 'attachment' == post.post_type -%}
								{{- include( 'components/tease-attachment.html.twig', { post: post } ) -}}
							{%- else -%}
								{{- include( 'components/tease-document-child.html.twig', { post: post } ) -}}
							{%- endif -%}
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	{%- else -%}
		<div class="container lg:text-4xl text-blue-dark font-bold">
			<div class="row">
				<div>
					{{- __( 'No likes to display yet.', 'weblexpro-dashboard' ) -}}
				</div>
			</div>
		</div>
	{%- endif -%}
{% endblock %}
